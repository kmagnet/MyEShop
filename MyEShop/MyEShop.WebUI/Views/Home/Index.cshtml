@model IEnumerable<MyEShop.Core.Models.Product>
@{
    ViewBag.Title = "My E-Shop Page";
}

<h1>My E-Shop Products</h1>

@foreach (var item in Model) { 

        <div class="col-md-3" style="height:450px;padding:10px;margin:10px;border: solid thin white">
            <div class="col-md-12">
                <img class="img" style="height:250px;width:250px;" src="~/Content/ProductImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "ViewProductDetails", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            <div class="col-md-12">
                <h4>@item.Price</h4>
            </div>
            <div class="col-md-12">
                <a href="#" class="btn btn-default">Add to Basket</a>
            </div>
        </div>
}
<div class="col-md-12 clearfix" />
